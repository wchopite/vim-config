set number
set mouse = a
set numberwidth = 1
set clipboard=unnamedplus 	" interact with the clipboard (copy/paste)
syntax enable
set showcmd
set ruler
set cursorline
set encoding = utf-8
set showmatch
set sw = 2 			" tab with 2 spaces
set relativenumber
set laststatus = 2

"" Searching
set hlsearch                    " highlight matches
set incsearch                   " incremental searching
set ignorecase                  " searches are case insensitive...
set smartcase                   " ... unless they contain at least one capital letter

colorscheme gruvbox
let g:gruvbox_contrast_dark = "hard"


